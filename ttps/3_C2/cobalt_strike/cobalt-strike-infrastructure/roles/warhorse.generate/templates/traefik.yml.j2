              - "{% raw %}{{ traefik_dir }}{% endraw %}/acme:/etc/traefik/acme"
              - "{% raw %}{{ traefik_dir }}{% endraw %}/log:/etc/traefik/log"
              traefik_ports:
                - '80:80'
                - '443:443'
              traefik_labels:
                traefik.http.routers.traefik.tls: "true"
                traefik.http.routers.traefik.tls.certresolver: "letsencrypt"
