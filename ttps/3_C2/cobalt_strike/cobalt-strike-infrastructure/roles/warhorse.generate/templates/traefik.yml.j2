                traefik.http.routers.traefik.middlewares: "tailscale@docker"
                traefik.http.routers.traefik.rule: "Host(`{% raw %}{{ traefik_vpn_hostname }}.{{ op_domain_name }}{% endraw %}`)"
                traefik.http.routers.traefik.service: "api@internal"
