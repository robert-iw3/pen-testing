{% for vm in warhorse.vm %}
{% if loop.first %}
all:
  children:
    warhorse:
      children:
        {{ vm.provider }}:
          hosts:
{% endif %}
{% if vm.http_proxy == 'traefik' %}
            {{ vm.name }}:
            # Traefik
{% if warhorse.dns.provider == 'aws' %}
              dns_traefik: "route53"
{% endif %}
{% if warhorse.dns.provider == 'digitalocean' %}
              dns_traefik: "digitalocean"
{% endif %}
{% if warhorse.dns.provider == 'linode' %}
              dns_traefik: "linode"
{% endif %}
